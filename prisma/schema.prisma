generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id            String         @id @default(cuid())
  name          String
  city          String
  createdAt     DateTime       @default(now())
  conversations Conversation[]
}

model Conversation {
  id          String    @id @default(cuid())
  isActive    Boolean
  step        String
  clientId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userName    String?
  destination String?
  checkin     String?
  checkout    String?
  client      Client    @relation(fields: [clientId], references: [id])
  messages    Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  sender         SenderType
  type           MessageType
  data           Json?
  text           String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

enum SenderType {
  BOT
  USER
}

enum MessageType {
  TEXT
  BUTTONS
  DATE
  QUESTION
  CAROUSEL
  FINISH
}
