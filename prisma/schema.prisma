datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SenderType {
  BOT
  USER
}

enum MessageType {
  TEXT
  DATE
  QUESTION
  CAROUSEL
  FINISH
}

model Client {
  id            String         @id @default(cuid())
  name          String
  city          String
  createdAt     DateTime       @default(now())
  conversations Conversation[]
}

model Conversation {
  id          String     @id @default(cuid())
  isActive      Boolean
  step        String
  clientId    String
  client      Client     @relation(fields: [clientId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userName    String?
  destination String?
  checkin     String?
  checkout    String?
  messages    Message[]
}

model Message {
  id             String     @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  sender         SenderType
  type           MessageType
  data           Json?
  text           String
  createdAt      DateTime   @default(now())
}
